
<dialog id="my-dialog" style="border:4px solid lightBlue;min-width:300px">
    <div class="card">
        <div class="card-header">Notification</div>
        <div class="card-body">
            <div class="alert alert-@AlertType">@Message</div>
        </div>
        <div class="card-footer">
            <form method="dialog">
                <button class="btn btn-@AlertType float-end">Okay</button>
            </form>
        </div>
    </div>
</dialog>


@code {
    private string AlertType { get; set; } = String.Empty;
    private string Message { get; set; } = String.Empty;

    public void SetDialogValues(string alertType, string message)
    {
        AlertType = alertType;
        Message = message;
        StateHasChanged();
    }

    public async Task ShowMessage() => await JS.InvokeVoidAsync("ShowDialog");
}
